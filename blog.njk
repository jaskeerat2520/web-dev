---
layout: mylayout
title: Blogs
pagination:
  data: post.result 
  size: 1 
  alias: blog
permalink: blog/{{ pagination.pageNumber + 1 }}/index.html
---

<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/blogsHome/">Blogs Home</a></li>
          <li class="breadcrumb-item active" aria-current="page">{{ blog.title }}</li>
        </ol>
      </nav>

      <div class="card mb-4">
        <div class="card-body">
          <h1 class="card-title">{{ blog.title }}</h1>
          <p class="card-text text-muted">Published on: {{ blog.date }}</p>
        </div>
      </div>

      <article class="mb-4">
        {{ blog.content | markdown | safe }}
      </article>

      <nav aria-label="Blog navigation">
        <ul class="pagination justify-content-between">
          {% if pagination.href.previous %}
            <li class="page-item">
              <a class="page-link" href="{{pagination.href.previous}}">&larr; Previous Post</a>
            </li>
          {% else %}
            <li class="page-item disabled">
              <span class="page-link">&larr; Previous Post</span>
            </li>
          {% endif %}

          {% if pagination.href.next %}
            <li class="page-item">
              <a class="page-link" href="{{pagination.href.next}}">Next Post &rarr;</a>
            </li>
          {% else %}
            <li class="page-item disabled">
              <span class="page-link">Next Post &rarr;</span>
            </li>
          {% endif %}
        </ul>
      </nav>
    </div>
  </div>
</div>

<script>
  console.log(JSON.stringify({{ blog.title | dump | safe }}));
</script>
