---
title: action movies 
layout: mylayout
pagination:
  data: movies
  size: 6

  alias: movies


---
 
<diV class= " m-4 row">
{% for movie in movies | filterActionMovies %}
  <div class="card bg-info m-2 w-25">
    <h1 class="card-title">{{ movie.title }}</h1>
    {% for block in movie.overview %}
      <p>{{ block.children[0].text }}</p>
        <img class = " h-50 w-50" src="https://cdn.sanity.io/images/vgsscqcj/production/{{movie.poster.asset._ref | filterImage}}" alt="Movie poster" />
    

    {% endfor %}
    <h1>{{movie.rating }} / 10 </h1>

<a href="/moviedetails/{{loop.index}}" > view </a>
</div>
{% endfor %}
</div>
<nav aria-label="Page navigation">
  <ul class="pagination">
    {% if pagination.href.previous %}
      <li class="page-item">
        <a class="page-link" href="{{ pagination.href.previous }}">Previous</a>
      </li>
    {% endif %}
    
    
    {% if pagination.href.next %}
      <li class="page-item">
        <a class="page-link" href="{{ pagination.href.next }}">Next</a>
      </li>
    {% endif %}
  </ul>
</nav>

